#!/bin/sh

while read Iface Destination Gateway Flags RefCnt Use Metric Mask MTU Window IRTT; do
		[ "$Mask" = "00000000" ] && \
		interface="$Iface" && \
		ipaddr=$(LC_ALL=C /sbin/ip -4 addr list dev "$interface" scope global) && \
		ipaddr=${ipaddr#* inet } && \
		ipaddr=${ipaddr%%/*} && \
		break
done < /proc/net/route

mkdir -p <%= @basic[:libhome] %>/<%= @package[:package] %>

mv <%= @basic[:home] %>/<%= @package[:package] %>/nsqlookupd /etc/systemd/system/<%= @package[:systemd_nsqlookupd_service] %>
mv <%= @basic[:home] %>/<%= @package[:package] %>/nsqadmin  /etc/systemd/system/<%= @package[:systemd_nsqadmin_service] %>

chmod 755 /etc/systemd/system/nsqlookupd.service
chmod 755 /etc/systemd/system/nsqadmin.service

sed -i 's/lookupd-tcp-address=localhost:4160/lookupd-tcp-address='$ipaddr':4160/g' /etc/systemd/system/<%= @package[:systemd_nsqd_service] %>
sed -i 's/lookupd-http-address=localhost:4161/lookupd-http-address='$ipaddr':4161/g' /etc/systemd/system/<%= @package[:systemd_nsqadmin_service] %>

echo "nsqd not yet started. Try manually 'systemctl start nsqd'"
